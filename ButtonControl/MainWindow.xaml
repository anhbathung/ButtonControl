<Window x:Class="ButtonControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ButtonControl"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label Target="{Binding ElementName = txtA}">
            hệ số_a:
        </Label>
        <TextBox Name="txtA"></TextBox>
        <Label Target="{Binding ElementName = txtB}">
            hệ số_b:
        </Label>
        <TextBox Name="txtB"></TextBox>
        <TextBlock>kết quả:</TextBlock>
        <TextBlock Name="tbKetQua" Background="Yellow"></TextBlock>
        <StackPanel Orientation="Horizontal">
            <Button Name="btnTong" Width="100" Margin="10"
                    Click="BtnTong_Click">
                <StackPanel Orientation="Horizontal">
                    <Image
                        Source=""/>
                    <TextBlock Margin="5,0">Tổng</TextBlock>
                </StackPanel>
            </Button>
            <Button Name="btnThoat" Width="100" Margin="10"
        Click="BtnThoat_Click">
                <StackPanel Orientation="Horizontal">
                    <Image
                        Source=""/>
                    <TextBlock Margin="5,0">Thoát</TextBlock>
                </StackPanel>
            </Button>
        </StackPanel>
    </StackPanel>
</Window>
